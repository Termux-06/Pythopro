/*This is the code for Arduino Uno for implementing stability of Electric vehicles or implementation of stable robots  using GYROSCOPIC SENSOR AND ACCELEROMETER*/
#include <Wire.h>
#include <MPU6050.h>

MPU6050 mpu;

void setup() {
    Serial.begin(9600);
    Wire.begin();
    
    Serial.println("Initializing MPU6050...");
    if (!mpu.begin(MPU6050_SCALE_2000DPS, MPU6050_RANGE_2G)) {
        Serial.println("MPU6050 initialization failed!");
        while (1);
    }
    
    Serial.println("MPU6050 ready!");
    delay(1000);
}

void loop() {
    Vector acc = mpu.readNormalizeAccel();
    Vector gyro = mpu.readNormalizeGyro();

    Serial.print("Accelerometer: X=");
    Serial.print(acc.XAxis);
    Serial.print(" Y=");
    Serial.print(acc.YAxis);
    Serial.print(" Z=");
    Serial.println(acc.ZAxis);

    Serial.print("Gyroscope: X=");
    Serial.print(gyro.XAxis);
    Serial.print(" Y=");
    Serial.print(gyro.YAxis);
    Serial.print(" Z=");
    Serial.println(gyro.ZAxis);

    Serial.println("---------------------------------");
    delay(500);
}
//Dowlding dependies would be uploded as early as possible 